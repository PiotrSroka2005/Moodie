             x:Class="Moodie.MainPage">

    <StackLayout>
        <Label Text="Jak się dzisiaj czujesz?"
           FontSize="24"
           HorizontalTextAlignment="Center"
           FontAttributes="Bold"
           TextColor="Black"/>

        <DatePicker x:Name="selectedData" PropertyChanged="SelectedDataPropertyChanged"/>

        <Grid x:Name="buttonsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

        </Grid>

        


    </StackLayout>

</ContentPage>
